<UserControl x:Class="AhorcadoWPF.NombreJugador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AhorcadoWPF"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="550">
    <Grid>
        <GroupBox FontSize="25" Background="White" Header="INTRODUCE TU NOMBRE">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox x:Name="txtNombre" Width="370" />
                <Button x:Name="btnAceptar" Height="50" Width="76" Margin="450 -40 0 0" Background="{x:Null}" BorderBrush="{x:Null}" Click="Aceptar">
                    <materialDesign:PackIcon Kind="check" Foreground="#FF673AB7" Height="40" Width="51"/>
                </Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
